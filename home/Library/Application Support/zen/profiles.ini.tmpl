{{- $configPath := joinPath .chezmoi.homeDir ".config/zen/profiles" }}
{{- $releaseId := mozillaInstallHash "/Applications/Zen.app/Contents/MacOS" }}
[Install{{- $releaseId -}}]
{{- if eq .place "OFFICE" }}
Default={{- $configPath }}/work
{{- else }}
Default={{- $configPath }}/personal
{{- end }}
Locked=1

[Profile1]
Name=Work
IsRelative=0
Path={{- $configPath }}/work

[Profile0]
Name=Personal
IsRelative=0
Path={{- $configPath }}/personal

[General]
StartWithLastProfile=1
Version=2
