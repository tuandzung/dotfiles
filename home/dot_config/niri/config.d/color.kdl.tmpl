{{- $theme := .catppuccin.macchiato }}
{{- if not .darkMode }}
{{-   $theme = .catppuccin.latte }}
{{- end }}

layout {
    background-color "{{ $theme.crust }}"
    focus-ring {
        active-gradient from="{{ $theme.peach }}" to="{{ $theme.sky }}" angle=45 relative-to="workspace-view" in="oklch longer hue"
        inactive-gradient from="{{ $theme.overlay2 }}" to="{{ $theme.crust }}" angle=45 relative-to="workspace-view"
    }
    shadow {
        color "{{ $theme.surface0 }}"
    }
    tab-indicator {
        active-color "{{ $theme.rosewater }}"
        inactive-color "{{ $theme.overlay1 }}"
        urgent-color "{{ $theme.blue }}"
    }

    insert-hint {
        gradient from="{{ $theme.flamingo }}" to="{{ $theme.red }}" angle=45 relative-to="workspace-view" in="oklch longer hue"
    }
}
