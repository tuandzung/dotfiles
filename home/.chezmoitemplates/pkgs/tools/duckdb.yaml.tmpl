name: duckdb-cli
{{- if and eq .chezmoi.os "linux" }}
method: binary
github:
  repo: duckdb/duckdb
  version: latest
  release_asset: duckdb_cli-{{ .chezmoi.os }}-{{ .chezmoi.arch }}.gz
archive:
  paths:
    - duckdb_cli-{{ .chezmoi.os }}-{{ .chezmoi.arch }}
hook:
  after:
    mv ~/.local/bin/duckdb_cli-{{ .chezmoi.os }}-{{ .chezmoi.arch }} ~/.local/bin/duckdb-cli
{{- else }}
method: os
macos:
  packages:
    - name: duckdb
{{- end }}
