name: prek
method: binary
github:
  repo: j178/prek
  {{- $os := "" }}
  {{- $arch := "" }}
  {{- if eq .chezmoi.os "darwin" }}
  {{- $os = "apple-darwin" }}
  {{- else if eq .chezmoi.os "linux" }}
  {{- $os = "unknown-linux-musl" }}
  {{- end }}
  {{- if eq .chezmoi.arch "amd64" }}
  {{- $arch = "x86_64" }}
  {{- else if eq .chezmoi.arch "arm64" }}
  {{- $arch = "aarch64" }}
  {{- end }}
  release_asset: prek-{{ $arch }}-{{ $os }}.tar.gz
archive:
  strip_components: 1
  paths:
    - prek-{{ $arch }}-{{ $os }}/prek
