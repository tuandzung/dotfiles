name: tilt
method: binary
github:
  repo: tilt-dev/tilt
  {{- $os := "" }}
  {{- $arch := "" }}
  {{- if eq .chezmoi.os "darwin" }}
  {{- $os = "mac" }}
  {{- else if eq .chezmoi.os "linux" }}
  {{- $os = "linux" }}
  {{- end }}
  {{- if eq .chezmoi.arch "amd64" }}
  {{- $arch = "x86_64" }}
  {{- else if eq .chezmoi.arch "arm64" }}
  {{- $arch = "arm64" }}
  {{- end }}
  release_asset: tilt.%s.{{ $os }}.{{ $arch }}.tar.gz
archive:
  paths:
    - tilt
