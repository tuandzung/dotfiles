name: bat
is_essential: true
{{- if eq .chezmoi.os "linux" }}
method: binary
github:
  repo: sharkdp/bat
  version: latest
  {{- if eq .chezmoi.arch "amd64" }}
  release_asset: bat-%1s-x86_64-unknown-linux-gnu.tar.gz
  {{- else if eq .chezmoi.arch "arm64" }}
  release_asset: bat-%1s-aarch64-unknown-linux-gnu.tar.gz
  {{- end }}
archive:
  strip_components: 1
  paths:
  {{- if eq .chezmoi.arch "amd64" }}
    - bat-%1s-x86_64-unknown-linux-gnu/bat
  {{- else if eq .chezmoi.arch "arm64" }}
    - bat-%1s-aarch64-unknown-linux-gnu/bat
  {{- end }}
hook:
  after: |
    {{- if eq .chezmoi.arch "amd64" }}
    arch=x86_64
    {{- else if eq .chezmoi.arch "arm64" }}
    arch=aarch64
    {{- end }}
    mv "$TEMP_DIR/bat-%1s-$arch-unknown-linux-gnu/bat.1" "$MAN_DIR/man1"
{{- else if eq .chezmoi.os "darwin" }}
method: os
macos:
  packages:
    - name: bat
{{- end }}
