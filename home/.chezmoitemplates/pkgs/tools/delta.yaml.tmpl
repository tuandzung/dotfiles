name: delta
is_essential: true
{{- if and (eq .chezmoi.os "linux") (eq .chezmoi.osRelease.id "gentoo" "ubuntu") }}
method: binary
github:
  repo: dandavison/delta
  version: latest
  {{- if eq .chezmoi.arch "amd64" }}
  release_asset: delta-%s-x86_64-unknown-linux-gnu.tar.gz
  {{- else if eq .chezmoi.arch "arm64" }}
  release_asset: delta-%s-aarch64-unknown-linux-gnu.tar.gz
  {{- end }}
archive:
  strip_components: 2
  paths:
  {{- if eq .chezmoi.arch "amd64" }}
    - delta-%s-x86_64-unknown-linux-gnu/delta
  {{- else if eq .chezmoi.arch "arm64" }}
    - delta-%s-aarch64-unknown-linux-gnu/delta
  {{- end }}
{{- else if eq .chezmoi.os "linux" "darwin" }}
method: os
arch:
  packages:
    - name: git-delta
macos:
  packages:
    - name: git-delta
{{- end }}
