name: navi
{{- if and (eq .chezmoi.os "linux") (eq .chezmoi.osRelease.id "gentoo" "ubuntu") }}
method: binary
is_essential: true
github:
  repo: denisidoro/navi
  version: latest
  {{- if eq .chezmoi.arch "amd64" }}
  release_asset: navi-%1s-x86_64-unknown-linux-musl.tar.gz
  {{- else if eq .chezmoi.arch "arm64" }}
  {{- if eq .chezmoi.os "linux" }}
  release_asset: navi-%1s-aarch64-unknown-linux-gnu.tar.gz
  {{- else if eq .chezmoi.os "android" }}
  release_asset: navi-%1s-aarch64-linux-android.tar.gz
  {{- end }}
  {{- end }}
archive:
  paths:
    - ./navi
{{- else }}
method: os
is_essential: true
macos:
  packages:
    - name: navi
arch:
  packages:
    - name: navi
{{- end }}
